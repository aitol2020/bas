<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:background="@drawable/kol">

        <TextView
            android:id="@+id/colsei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Colosseum"
            android:textColor="@color/white"
            android:layout_marginRight="220dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt"
            android:textSize="20dp"/>



        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On of the most recognizable sites in the world"
            android:textColor="#9F9F9F"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="@+id/colsei"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
         android:orientation="horizontal"
         app:layout_constraintTop_toBottomOf="@+id/con">


        <ImageView
            android:id="@+id/kam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/kon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_contacts"/>
        <ImageView
            android:id="@+id/goo"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="25dp"

            android:src="@drawable/ic_google"/>


    </LinearLayout>




    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FF6363"
        android:text="Перейти"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="160dp"
        android:layout_height="34dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="68dp"
        android:text="312 "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>







